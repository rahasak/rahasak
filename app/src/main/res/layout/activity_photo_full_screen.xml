    <RelativeLayout
        android:id="@+id/selfie_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/user_profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/translucent_black">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/selfie_image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/selfie"/>


                        <LinearLayout
                            android:id="@+id/loading_info_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/selfie_calling_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Selfie calling..."
                                android:textColor="@color/colorPrimary"
                                android:textSize="45sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/selfie_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Eranga"
                            android:textColor="@color/colorPrimary"
                            android:textSize="35sp" />

                    </LinearLayout>

                </FrameLayout>

            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
